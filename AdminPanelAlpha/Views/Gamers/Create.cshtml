@{
    ViewData["Title"] = "Create new gamer";
}


<div class="text-center">
    <div style="width: 300px;margin: 0 auto;">
        <br />

        <form class="px-4 py-3" method="post" asp-controller="Gamers" asp-action="Create">
            <div class="form-group">
                <label for="name">Name </label>
                <input class="form-control" id="name" name="name" placeholder="">
            </div>

            <div class="form-group">
                <label for="level">Level </label>
                <input class="form-control" id="level" name="level" placeholder="">
            </div>


            <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <br />
        <span>@ViewData["ActionMessage"]</span>
    </div>
</div>